<?xml version="1.0"?>
<robot name="tidybot_base">

  <!-- Root frame at (0,0,0) -->
  <link name="base_root"/>

  <joint name="base_root_to_base_link" type="fixed">
    <parent link="base_root"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0.035" rpy="0 0 0"/>
      <mass value="0"/>
      <inertia 
        ixx="0.001" ixy="0.0" ixz="0.0"
        iyy="0.001" iyz="0.0"
        izz="0.001"/>
    </inertial>

    <!-- Visual: base body -->
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="meshes/body.stl"/>
      </geometry>
      <material name="silver"/>
    </visual>

    <!-- Visual: arm plate -->
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="meshes/arm_plate.stl"/>
      </geometry>
      <material name="black"/>
    </visual>

    <!-- Collision: base body -->
    <collision>
      <origin xyz="0 0 0.23" rpy="0 0 0"/>
      <geometry>
        <box size="0.548 0.508 0.29"/>
      </geometry>
    </collision>

    <!-- Collision: arm plate -->
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="meshes/arm_plate.stl"/>
      </geometry>
    </collision>

  </link>

</robot>
